<!DOCTYPE html>
<html>
<%- include("templates/header") %>

  <body class="bg-gray-100">
    <%- include("templates/navbar") %>

      <!-- Sensors Section -->
      <section class="mb-12">
        <h2 class="text-xl font-light mb-6">Sensores</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Temperature Sensor -->
          <div class="flex items-center space-x-3">
            <div id="temp-sensor-status" class="w-4 h-4 bg-green-500 rounded-full"></div>
            <div>
              <p class="text-sm font-medium">Sensor de</p>
              <p class="text-sm font-medium">Temperatura</p>
            </div>
          </div>

          <!-- Movement Sensor -->
          <div class="flex items-center space-x-3">
            <div id="movement-sensor-status" class="w-4 h-4 bg-green-500 rounded-full"></div>
            <div>
              <p class="text-sm font-medium">Sensor de</p>
              <p class="text-sm font-medium">Movimento</p>
            </div>
          </div>

          <!-- Noise Sensor -->
          <div class="flex items-center space-x-3">
            <div id="noise-sensor-status" class="w-4 h-4 bg-green-500 rounded-full"></div>
            <div>
              <p class="text-sm font-medium">Sensor de</p>
              <p class="text-sm font-medium">Ruído</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Measurements Section -->
      <section>
        <h2 class="text-xl font-light mb-8">Medidas</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Temperature -->
          <div>
            <p class="text-sm text-gray-400 mb-2">Temperatura</p>
            <p id="temp-value" class="text-4xl font-light">32.4 C</p>
          </div>

          <!-- Movement -->
          <div>
            <p class="text-sm text-gray-400 mb-2">Movimento</p>
            <p id="movement-value" class="text-4xl font-light">--</p>
          </div>

          <!-- Noise -->
          <div>
            <p class="text-sm text-gray-400 mb-2">Ruído</p>
            <p id="noise-value" class="text-3xl font-light">Moderado</p>
          </div>
        </div>
      </section>

      <!-- Fan Control Section -->
      <section class="mb-12">
        <h2 class="text-xl font-light mb-6">Ventilador</h2>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <!-- Auto Mode Switch -->
          <div class="flex items-center space-x-4">
            <span class="text-sm font-medium">Modo Automático</span>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" id="autoModeSwitch" class="sr-only peer">
              <div
                class="w-11 h-6 bg-gray-600 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600">
              </div>
              <span id="autoModeStatus" class="ml-3 text-sm text-gray-400">Desligado</span>
            </label>
          </div>

          <!-- Fan Speed Controls -->
          <div class="flex items-center space-x-3">
            <span class="text-sm font-medium mr-2">Velocidade:</span>
            <button id="speedBtn1"
              class="speed-btn px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-gray-600">
              1
            </button>
            <button id="speedBtn2"
              class="speed-btn px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-gray-600">
              2
            </button>
            <button id="speedBtn3"
              class="speed-btn px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-gray-600">
              3
            </button>
          </div>
        </div>

        <!-- Current Fan Status -->
        <div class="mt-4 p-4 bg-gray-700 rounded-lg">
          <p class="text-sm text-gray-300">Status: <span id="fanStatus" class="text-white font-medium">Velocidade
              1</span></p>
        </div>
      </section>
      <script src="/scripts/notifications.js"></script>
      <script src="/scripts/fanControl.js"></script>
      <script src="/scripts/dataFetch.js"></script>
  </body>
  <%- include("templates/footer") %>

</html>