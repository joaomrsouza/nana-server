{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/server/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
